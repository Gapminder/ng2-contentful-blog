.blog-item
  .post-title
    line-height 18px
    font-size 16px
  &:hover
    .post-title
      color #ffc300
      text-decoration none
  .post-p
    font-size 14px
    margin-top 10px
    color #767d86
    a
      color: #b04514;
      line-height: 20px;

.btn-yellow
  display inline-block
  &:hover
    color #374551

.post-wrap-img
  border-radius 3px
  overflow hidden
  border 1px solid #dce3ec
  display block
  padding-top 66.66%
  width 100%
  background-position 50% 50%
  background-size cover


  @media medium
    display inline-block
    float none
    vertical-align top
    margin-bottom 15px
  @media small
    margin-bottom 15px
