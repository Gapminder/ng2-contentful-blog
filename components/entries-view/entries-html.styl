img
  max-width 100%

.block-entry
  margin 0 -30px
  padding 20px 30px 0
  background-repeat no-repeat
  background-size cover

  h2
    font-size 28px
    margin-bottom 0
  a
    color #b04514
    text-decoration underline
  h3
    font-size 24px

  p
    font-size 20px
    line-height 30px
    margin 15px 0
    display inline-block
    width 100%

  a
    &:hover
      text-decoration underline

@media screen and (max-width: 820px)
  .block-entry
    margin 0 -15px
    padding 15px 15px 0
@media screen and (max-width: 375px)
  .block-entry
    h2
      font-size 20px
    h3
      font-size 18px
    p
      font-size 16px
