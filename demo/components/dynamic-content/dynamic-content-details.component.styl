img
  max-width 100%

a,
avisited
  color inherit
  text-decoration none
  &:hover
    color #ffc300

.post-title
  color #374551
  font-size 24px
  line-height 30px

.post-p
  font-size 16px
  color #767d86

.post-head
  position relative
  color #374551
  font-size 38px
  line-height 1.2
  z-index 1
  overflow hidden
  margin 60px 0 40px
  &:after
    content ''
    display inline-block
    width 100%
    height 1px
    background #eff2f6
    z-index -1
    position relative
    vertical-align middle
    left 20px
    margin 0 -100% 0 0

p
  font-size 18px
  color #767d86

ul
  list-style none
  margin 0
  padding 0


.dynamic-details
  h1
    font-size 38px
    margin-bottom 0

  ul
    li
      font-size: 20px;
      line-height: 30px;
      color #767d86
      margin-bottom 10px
      &:before
        content "- "

.dynamic-item
  margin-bottom 70px
  float none
  display inline-block
  vertical-align top

.dynamic-wrap-img
  border-radius 3px
  overflow hidden
  border 1px solid #dce3ec
  position relative
  display block
  height 240px
  background-position: 50% 50%;
  background-size: cover;

  .play
    width 50px
    height 50px
    opacity 0.7
    border-radius 50%
    border 1px solid #374551
    position absolute
    top 40%
    left 43%
    z-index 2
    background #f2fafc
    .fa-play
      color #374551
      font-size 24px
      top 12px
      left 17px
      position absolute
  &:hover
    .post-title
      color #ffc300
    .play
      opacity 1

.thumbnail-title
  max-width 50px
  max-height 50px
  float left
  margin-right 15px
  margin-top 10px
